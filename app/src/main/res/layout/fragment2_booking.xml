<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.a53536.finishproject.MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:textColor="@color/colorAccent"
                        android:text="借书登记" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="姓        名："/>
                    <EditText
                        android:id="@+id/name_et"
                        android:layout_width="262dp"
                        android:hint="输入姓名"
                        android:layout_height="wrap_content"
                        android:onClick="onclick"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="证件号码："/>
                    <EditText
                        android:id="@+id/ID_et"
                        android:layout_width="262dp"
                        android:hint="输入身份证号码"
                        android:layout_height="wrap_content"
                        android:onClick="onclick"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="联系方式："/>
                    <EditText
                        android:id="@+id/phone_et"
                        android:layout_width="262dp"
                        android:hint="输入电话"
                        android:layout_height="wrap_content"
                        android:onClick="onclick"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="借出地址："/>
                    <EditText
                        android:id="@+id/address_et"
                        android:layout_width="262dp"
                        android:hint="输入地址"
                        android:layout_height="wrap_content"
                        android:onClick="onclick"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp"
                    android:padding="10dp"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="10dp"
                        android:text="性别"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                    <RadioGroup
                        android:id="@+id/book_iffever"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.75"
                        android:orientation="vertical"
                        android:background="@drawable/underline">
                        <RadioButton
                            android:id="@+id/book_iffever_yes"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="男" />
                        <RadioButton
                            android:id="@+id/book_iffever_no"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="女" />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="还书截止时间："/>
                    <EditText
                        android:id="@+id/time_et"
                        android:layout_width="262dp"
                        android:hint="点击选择时间"
                        android:layout_height="wrap_content"
                        android:onClick="onclick"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="请选择书籍："/>
                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="242dp"
                        android:layout_height="30dp">
                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp"
                    android:weightSum="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center">
                    <Button
                        android:id="@+id/submit_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="提交"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_tijiao"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>